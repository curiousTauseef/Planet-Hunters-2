.verification
  color #bbbcc2
  font-size 20px
  font-weight 300
  // background-color #072034 // solid color bg option
  background url("./images/starfield-planets.jpg")

  .title
    background-color #fc2738
    padding 10px
    font-size 15px
    letter-spacing 2px
    text-transform uppercase

  .container
    padding 10px
    text-align center
    margin 0 auto
    img
      width 100%
      border-radius 5px
    p
      margin 10px 0
    #button-container
      width 480px
      height 200px
      margin 0 auto
      button
        margin 10px 0
        &[name="yes"]
          width 48%
          float left
        &[name="no"]
          background-color #fff
          color #000
          width 48%
          float right
        &[name="not-sure"]
          width 100%
          &:hover
            background-color rgba(13,21,24,0.1)
        &[name="next-subject"]
          display none
          width 100%
    #canvas-container
      margin 0 auto
      canvas
        border-radius 5px
        border 2px solid black
      #main-subject
        display inline-block
        position relative
        #summary
          display none
          position absolute
          border-radius 5px
          background-color rgba(13,21,24,0.75)
          width 100%
          height 304px
          top 0px
          h1
            margin-top 120px
            font-style italic
      #verify-graph
        background rgba(13,21,24,0.75)
      #left-graph, #right-graph
        vertical-align 50px
        opacity 0.5
      #left-graph
        background green
        margin-right 45px
      #right-graph
        background red
        margin-left 45px

@media screen and (max-width: 820px)
  .verification
    .container
      #canvas-container
        #left-graph
          display none
        #right-graph
          display none

@media screen and (max-width: 520px)
  .verification
    .container
      #button-container
        width 100%