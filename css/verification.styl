.verification
  color #bbbcc2
  font-size 20px
  font-weight 300
  background "./images/planet.png"

  .title
    background-color #fc2738
    padding 10px
    font-size 15px
    letter-spacing 2px
    text-transform uppercase
    margin-bottom 10px

  .container
    padding 0 10px
    text-align center
    max-width 520px
    margin 0 auto
    img
      width 100%
      border-radius 5px
    p
      margin 10px 0
    button
      color #fff
      height 60px
      line-height 60px
      border 2px solid transparent
      border-radius 5px 
      margin 10px 0
      &[name="yes"]
        background-color #deb85b
        width 48%
        float left
      &[name="no"]
        background-color #fff
        width 48%
        float right
        color #000
      &[name="not-sure"]
        border 2px solid #bbbcc2
        width 100%
      &[name="next-subject"]
        display none
        background-color #deb85b
        width 100%
    #canvas-container
      position relative
      width 380px
      margin 0 auto
      display table
      #verify-graph
        background rgba(13,21,24,0.75)
      #summary
        display none
        position absolute
        background-color rgba(13,21,24,0.75)
        width 100%
        height 100%
        top 0px
        h1
          margin-top 120px
          font-style italic