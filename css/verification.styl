.verification
  color #bbbcc2
  font-size 20px
  font-weight 300
  background-color #072034

  .title
    background-color #fc2738
    padding 10px
    font-size 15px
    letter-spacing 2px
    text-transform uppercase

  .container
    padding 10px
    text-align center
    max-width 520px
    margin 0 auto
    img
      width 100%
      border-radius 5px
    p
      margin 10px 0
    button
      margin 10px 0
      &[name="yes"]
        width 48%
        float left
      &[name="no"]
        background-color #fff
        color #000
        width 48%
        float right
      &[name="not-sure"]
        width 100%
      &[name="next-subject"]
        display none
        width 100%
    #canvas-container
      position relative
      width 320px
      margin 0 auto
      display table
      #verify-graph
        background rgba(13,21,24,0.75)
      #summary
        display none
        position absolute
        background-color rgba(13,21,24,0.75)
        width 100%
        height 100%
        top 0px
        h1
          margin-top 120px
          font-style italic