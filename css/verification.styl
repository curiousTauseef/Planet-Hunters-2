.verification
  color #bbbcc2
  font-size 20px
  font-weight 300
  background "./images/planet.png"
  .title
    background-color #fc2738
    padding 10px
    font-size 15px
    letter-spacing 2px
    text-transform uppercase
    margin-bottom 10px
  .container
    padding 0 10px
    text-align center
    img
      width 100%
      border-radius 5px
    p
      margin 10px 0
    button
      color #fff
      height 60px
      line-height 60px
      border 2px solid transparent
      border-radius 5px 
      margin 10px 0
      opacity 1
      &[name="yes"]
        background-color #deb85b
        width 48%
        float left
      &[name="no"]
        background-color #fff
        width 48%
        float right
        color #000
      &[name="not-sure"]
        border 2px solid #bbbcc2
        width 100%