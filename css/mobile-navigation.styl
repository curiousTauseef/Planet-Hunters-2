@media screen and (max-width: 1090px)
  .site-navigation
    .links
      padding 0
    .temp_logo
      padding 0 10px 0 10px
  .zooniverse-top-bar
    .zooniverse-info
      // display block
      // margin 0

@media screen and (max-width: 920px)
  .site-navigation
    .links
      a
        padding 0 15px 0 15px
  .zooniverse-top-bar
    .zooniverse-info
      display none


@media screen and (max-width: 820px)
  .site-navigation
    #hamburger, #close, #user-icon
      float left
      display inline-block
      width 20px
      height 50px
      padding 0 10px

    #close
      display none
      background-color #252525

    #user-icon
      float right
      width 25px
      &.active
        background-color #252525

    .links
      display none
      z-index 1000
      margin 0
      padding 0
      width 100%
      position absolute
      top 50px
      background-color #252525
      a
        line-height 75px
        font-size 25px
        opacity 1
      .link
        display block

  .zooniverse-top-bar
    display none
    position absolute
    top 50px
    width 100%
    background-color #252525
    text-align center
    margin 0
    padding 0
    .zooniverse-info, .zooniverse-language-icon, .separator, .current-user-name
      display none
    .sign-in.piece, .user-info.piece
      margin 0
      width 100%
      button
        display block
        line-height 75px
        font-size 25px
        opacity 1
        text-transform capitalize
        margin 0 auto
    img
      margin-bottom 10px

