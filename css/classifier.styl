.classifier
  color: inherit

  #subject-container
    width: 1140px

    .subject-header
      padding-bottom: 45px
      h3
        color: white

    #graph-container
      float: left

      #graph
        width: 1000px
        height: 420px
        float: left
        border: 1px solid #5e5e5e; 
        background: rgba(13,21,24,0.75)

    #tools
      float: left
      width: 50px   // account for padding
      height: 410px // account for padding
      padding: 5px
      background-color: rgb(50,50,50)

      h3
        font-style: italic
        font-size: 0.9em

      .tool-button
        padding: 5px
        margin: 5px 0px 5px 0px
        text-align: center
        font-size: 0.75em
        height: 60px
        width: 50px
        border: 1px solid
        border-radius: 0.3em
        // display: inline-block
        &:active
          transform: translateY(1px)
          box-shadow: none
        &:hover
          opacity 0.95

    #scale
      float:left
      display: inline-block
      background-color: black
      width: 1000px
      height: 20px
      border: 1px solid rgb(50,50,50)

      #scale-slider
        width: 1000px
        // height: 15px
        padding-top: auto
        padding-bottom: auto
