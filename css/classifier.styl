.classifier
  color inherit
  .content-block
    overflow-x visible
    // overflow hidden
  .bg-overlay
    background-color rgba(19,34,44,0.92)

  #course-container
    // opacity 0
    // display none
    position absolute
    width 640px
    height 400px
    z-index 999
    margin-top 0
    margin-bottom 0
    margin-right -50%
    margin-left auto
    right -320px
    transition margin 1s//, opacity 4s

    &.visible
      // opacity 1
      // display block
      position absolute
      width 640px
      height 400px
      z-index 999
      margin-top 0
      margin-bottom 0
      margin-right 50%
      margin-left auto
      right -320px
      transition margin 1s//, opacity 4s

    .course-figure-credits
      text-align center
      font-style italic
      font-size 12px
      padding-left 20px
      padding-right 20px
      padding-top 0px
      padding-bottom 20px
    button
      margin 0 auto
      margin-top 10px
      align center
    .course-close
      margin 10px
      display block     
      float right 
      color white
      cursor pointer
      img
        padding-left 9px
    #course-body
      width inherit
      height inherit
      margin 0 auto
      float left
      color black
      border-radius 15px
      overflow hidden
    #course-title
      margin 0
      display block
      float left  
      padding-left 20px
      padding-right 20px
      color white
      font-size 16px
    .course-figure-container
      display block
      background-color black
      border-top-left-radius 15px
      border-top-right-radius 15px
      height 50%
      width 100%
      &.horizontal
        border-top-left-radius 15px
        border-top-right-radius 15px
        height 50%
        width 100%
      &.vertical
        float left
        border-top-left-radius 15px
        border-bottom-left-radius 15px
        width 50%
      img
        display block
        margin auto
        max-height 100%
        max-width 100%

    .course-text
      overflow visible
      background-color white
      font-size 14px
      padding 20px
      &.horizontal
        border-bottom-left-radius 15px
        height 50%
      &.vertical
        float right
        border-top-right-radius 15px
        border-bottom-right-radius 15px
        width 50%

  #subject-container
    position absolute
    width 1090px
    height 400px
    margin-top 0
    margin-bottom 0
    margin-right 50%
    right -545px
    transition margin 1s

    &.hidden
      position absolute
      width 1090px
      height 400px
      z-index 999
      margin-top 0
      margin-bottom 0
      margin-right 200%
      right -545px
      transition margin 1s
      
    .subject-header
      h3
        color white
      p, h3
        // padding-left 20px
      #course-prompt
        height 25px
        margin-top 5px
        // margin-bottom 10px
        // padding-left 20px
        vertical-align middle
        font-size 1em
        color white
        background-color #3E89AF
        width inherit
        border-radius: 0.3em
      .course-message
        line-height 25px
        float left
        padding-right 10px
      .course-button
        padding 0px 10px 0px 10px
        height 100%
        margin auto
        color black
        border none
        transition 0.4s
        float left
        font-weight 100
        &:hover
          color white
          background-color rgba(0,0,0,0.5)
          transition 0.4s
        &.selected
          font-weight 700
      .course-prompt-close
        padding 9px
        float right
        cursor pointer
        &:active
          transform translateY(1px)
        
      #course-alert
        float left
        width 20px
        height 20px
        padding 2px 8px

    #graph-container
      float left
      position relative
      margin-bottom 10px
      margin-top 10px

      #loading-screen
        position absolute
        width 1024px
        height 420px
        background-color rgba(0,0,0,0.25)
        background-repeat no-repeat
        background-position center
        // transition opacity 1s
        // background-image url('./images/loading.gif')
        h3
          padding 20px

      #graph
        float left
        border 1px solid rgb(50,50,50)
        background rgba(13,21,24,0.75)
        z-index 3
        user-select none

      #marks-container
        height 420px
        width 1026px
        overflow hidden
        float left
        position relative
        user-select none

      #zoom-notification
        position absolute
        font-size 72px
        font-weight bold
        padding 20px
        opacity 0.5

      #classify-summary
        display none
        position absolute
        top 0px
        height 450px
        width 100%
        z-index 100
        border-radius 5px
        .three-column
          margin 0
          padding 0
          float left
          width 33.33%
          height 100%
          background-color rgba(13,21,24,0.9)
          &:nth-child(1)
            background-color #fc4541
            border-radius 5px 0 0 5px
          &:nth-child(3)
            border-radius 0 5px 5px 0
          .content
            padding 20px
            color #fff
            p
              margin-bottom 10px
            h1, h2
              margin-bottom 30px
            h1
              font-weight 300
              font-size 24px
            h2
              text-transform uppercase
              font-size 14px
              line-height 36px
            button
              width 100%
            .talk-pill
              display none
              button
                vertical-align middle
                border 2px solid #fff
                height 64px
                border-radius 0 5px 5px 0
                margin-left -10px
                width 33%
                background-color #fff
                color black
                border-left none
                &:active
                  transform translateY(0px)
              textarea
                outline none
                padding 0
                border-right none
                resize none
                width 66%
                vertical-align middle
                height 60px
                color #fff
                background transparent
                border 2px solid #fff
                border-radius 5px 0 0 5px
            #comments, #alt-comments
              height 240px
              overflow-y scroll
              .formatted-comment
                border-bottom 1px solid #848b92
                margin-bottom 20px
                word-wrap break-word
                &:last-child
                  border-bottom none
                p
                  &:not(:nth-child(1))
                    font-size 10px
                    font-style italic
                    span
                      color #fff

      #tools
        float right
        width 54px
        height 432px
        padding 5px
        background-color rgb(50,50,50)
        h3
          font-style italic
          font-size 0.9em
        button
          padding 5px
          margin 5px 0px 5px 0px
          text-align center
          font-size 0.75em
          opacity 0.5
          span
            top 20px
            position relative
            display inline-block
            margin-bottom 10px
          &:active
            transform translateY(1px)
            box-shadow none
          &:hover
            opacity 1.0
          &#toggle-zoom
            background url("images/icons/toolbar-zoomplus.png") no-repeat 50% 35%
            &.allowZoomOut
              background #151a1b url("images/icons/toolbar-zoomminus.png") no-repeat 50% 35%
            &.zoomed
              background-color #151a1b
          &#toggle-fav
            background url("images/icons/toolbar-fav-empty.png") no-repeat 50% 35%
            &.toggled
              background #151a1b url("images/icons/toolbar-fav-filled.png") no-repeat 50% 35%
          &#help
            background url("images/icons/toolbar-question-mark.png") no-repeat 50% 35%
          &#tutorial
            background url("images/icons/toolbar-cursor.png") no-repeat 50% 35%
        .tool-button
          border none
          color white
          background-color rgb(50,50,50)
          height 60px
          width 100%
          border-radius 0.3em
          transition 0.3s
          &:hover
            background-color #4C4C4C //#151A1B
            border-radius 0.3em
            opacity 1.0

          &.toggled
            background-color #151A1B
            transition 0.3s
      #slider-container
        display inline-block
        float left
        height 22px
        background rgba(13,21,24,0.75)
        #ui-slider
          // width 964px
          width 1026px
          height 20px
          position relative
          float left
          display inline-block
          background none
          &.noUi-background
            border 1px solid #323232
          &.noUi-target
            border none
            box-shadow none
          .noUi-base
            width 790px
            margin-left 118px
          .noUi-handle
            border 1px solid #9a9ea2
            background rgba(137, 137, 137, .6)
            height 22px
            top 0px
            width 236px
            left -118px
            box-shadow none
            &:before
              text-align center
              color #9a9ea2
              background none
              content "III"
              line-height 20px
              height 20px
              left 0px
              top 0px
              position relative
              font-size 12px
              width 100%
              z-index 5
            &:after
              display none
            &:hover
              cursor -webkit-grab
              cursor grab
        #axis-label
          width 60px
          float left
          height 100%
          text-align center
          font-weight 700
          font-style italic
          font 12px
          background rgb(50,50,50)
        #numbers-container
          display inline
          position absolute
          background rgba(13,21,24,0.75)
          // width 954px
          width 1024px
          height 20px
          text-align justify
          display inline-table
          // padding-left 10px
          color #525c5b
          //left 60px
          border 1px solid #323232
          span
            // width 10px
            display table-cell

    #subject-metadata
      // float left
      h3
        margin-top 5px
        margin-bottom 5px
      div
        float left
        margin-right 5px
      .meta-value
        color rgb(252,69,65)
        font-style bold
        margin-right 40px

  button
    &[name="no-transits"]
      float right
      opacity 0.5
      font-weight bold
      &:hover
        opacity .9
    &[name="finished"]
      display none
      float right
    &[name="next-subject"]
      display none
      float right
