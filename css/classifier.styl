.classifier
  color: inherit


  #graph
    z-index 3
  #subject-container
    width: 1140px

    .subject-header
      padding-bottom: 45px
      h3
        color: white

    #graph-container
      float: left
      // z-index: 20

      #graph
        width: 1000px
        height: 420px
        float: left
        border: 1px solid #5e5e5e; 
        background: rgba(13,21,24,0.75)

    #tools
      float: left
      width: 50px   // account for padding
      height: 410px // account for padding
      padding: 5px
      background-color: rgb(50,50,50)

      h3
        font-style: italic
        font-size: 0.9em

      .tool-button
        padding: 5px
        margin: 5px 0px 5px 0px
        text-align: center
        font-size: 0.75em
        height: 60px
        width: 50px
        border: 1px solid
        border-radius: 0.3em
        // display: inline-block
        &:active
          transform: translateY(1px)
          box-shadow: none
        &:hover
          opacity 0.95

    #scale
      float:left
      display: inline-block
      background-color: black
      width: 1000px
      height: 20px
      border: 1px solid rgb(50,50,50)

      #scale-slider
        width: 1000px
        padding-top: auto
        padding-bottom: auto


      .faux-range-input
        width 1000px
        height 20px
        vertical-align middle
        background black //#25b4c5
        cursor ew-resize
        cursor -webkit-grab
        top 0px

        &:before
          content: "1.2.3.4.5.6."
          margin 0px
          font-size 12px
          top: 0
          letter-spacing 79px

        .faux-range-track
          width 744px // (1000-256px)

        .faux-range-thumb
          margin -1px 0 0 -8px
          background rgba(50,50,50,0.75) //#1b7a85
          outline none
          border 1px solid #5e5e5e
          width 256px
          height 20px
          border-radius 4px
          top 0px

          &:before
            // content: "III"
            color #2fa5b9
            position absolute
            margin 0px
            font-size 12px
            width: 100%
            z-index 5

        .faux-range-tick
          display none

