.classifier
  color inherit
  .content-block
    overflow-x visible
  .bg-overlay
    background-color rgba(19,34,44,0.92)
  #course-container
    position absolute
    top 96px
    width 640px
    height 400px
    z-index 999
    margin-top 0
    margin-bottom 0
    margin-right -50%
    margin-left auto
    right -320px
    transition margin 1s
    &.visible
      margin-right 50%
      transition margin 1s
    .course-figure-credits
      text-align center
      font-style italic
      font-size 12px
      padding-left 20px
      padding-right 20px
      padding-top 0px
      padding-bottom 20px
    button
      margin 0 auto
      margin-top 10px
      align center
    .course-close
      margin 10px
      display block     
      float right 
      color white
      cursor pointer
      img
        padding-left 9px
    #course-body
      width inherit
      height inherit
      margin 0 auto
      float left
      color black
      border-radius 15px
      overflow hidden
    #course-title
      margin 0
      display block
      float left  
      padding-left 20px
      padding-right 20px
      color white
      font-size 16px
    .course-figure-container
      display block
      background-color black
      border-top-left-radius 15px
      border-top-right-radius 15px
      height 50%
      width 100%
      &.horizontal
        border-top-left-radius 15px
        border-top-right-radius 15px
        height 50%
        width 100%
      &.vertical
        float left
        border-top-left-radius 15px
        border-bottom-left-radius 15px
        width 50%
      img
        display block
        margin auto
        max-height 100%
        max-width 100%
    .course-text
      overflow visible
      background-color white
      font-size 14px
      padding 20px
      &.horizontal
        border-bottom-left-radius 15px
        height 50%
      &.vertical
        float right
        border-top-right-radius 15px
        border-bottom-right-radius 15px
        width 50%
  #subject-container
    position relative
    width 1090px
    height 400px
    margin-top 0px
    margin-bottom 0px
    margin-left auto
    margin-right auto
    right 0%
    z-index 999
    transition right 1s
    &.hidden
      margin-right auto
      right 100%
      transition right 1s
    .subject-header
      // margin-top 20px
      // padding-top 20px
      height 96px
      width inherit
      display inline-block  
      .do-you-see-a-transit
        position absolute
        top 20px
      h3
        color white
      p, h3
        // padding-left 20px
      #course-prompt
        height inherit
        margin-top 5px
        vertical-align middle
        font-size 1em
        color white
        background-color #3E89AF
        border-radius: 0.3em
      .course-message
        line-height 25px
        float left
        padding-right 5px
      .course-button
        padding 0px 10px 0px 10px
        height 100%
        margin auto
        color black
        border none
        transition 0.4s
        float left
        font-weight 100
        &:hover
          color white
          background-color rgba(0,0,0,0.5)
          transition 0.4s
        &.selected
          font-weight 700
      .course-prompt-close
        padding 9px
        float right
        cursor pointer
        &:active
          transform translateY(1px)
      #course-alert
        float left
        padding 5px
      #notification
        height 25px
        width inherit
        // margin-top 5px
        // margin-bottom 5px
        position absolute
        top 61px
        vertical-align middle
        font-size 1em
        color white
        border-radius 0.3em
        #notification-message
          color #fc4541
          line-height 25px
    #graph-container
      float left
      position relative
      #loading-screen
        position absolute
        width 1024px
        height 420px
        background-color rgba(0,0,0,0.25)
        background-repeat no-repeat
        background-position center
        // background-image url('./images/loading.gif')
        h3
          padding 20px
      #graph
        float left
        border 1px solid rgb(50,50,50)
        background rgba(13,21,24,0.75)
        z-index 3
        user-select none
      #marks-container
        height 420px
        width 1026px
        overflow hidden
        float left
        position relative
        user-select none
      #zoom-notification
        position absolute
        font-size 72px
        font-weight bold
        padding 20px
        opacity 0.5
        
      #classify-summary
        display none
        position absolute
        top 0px
        height 442px
        width 1090px
        z-index 100
        border-radius 5px
        #ukirt-url
          text-decoration underline
          
        .three-column
          margin 0
          padding 0
          float left
          width 33.33%
          height 100%
          background-color rgba(13,21,24,0.9)
          &:nth-child(1)
            background-color #fc4541
            border-radius 5px 0 0 5px
          &:nth-child(3)
            border-radius 0 5px 5px 0
          .content
            padding 20px
            color #fff
            p
              margin-bottom 10px
            h1, h2
              margin-bottom 30px
            h1
              font-weight 300
              font-size 24px
            h2
              text-transform uppercase
              font-size 14px
              line-height 36px
            button
              width 100%
            .talk-pill
              display none
              button
                vertical-align middle
                border 2px solid #fff
                height 64px
                border-radius 0 5px 5px 0
                margin-left -10px
                width 33%
                background-color #fff
                color black
                border-left none
                &:active
                  transform translateY(0px)
              textarea
                outline none
                padding 0
                border-right none
                resize none
                width 66%
                vertical-align middle
                height 60px
                color #fff
                background transparent
                border 2px solid #fff
                border-radius 5px 0 0 5px
            #comments, #alt-comments
              height 240px
              overflow-y scroll
              .formatted-comment
                border-bottom 1px solid #848b92
                margin-bottom 20px
                word-wrap break-word
                &:last-child
                  border-bottom none
                p
                  &:not(:nth-child(1))
                    font-size 10px
                    font-style italic
                    span
                      color #fff

      .summary-button
        width 60px
        height 60px
        border-radius 0.3em
        // transition 0.3s
        background-color rgb(50,50,50)
        span
          top 20px
          position relative
          display inline-block
          margin-bottom 10px
        &#summary-fav-button
          background url("images/icons/favorite-nofill.svg") no-repeat 50% 35%
          &:hover
            background #323232 url("images/icons/favorite-nofill.svg") no-repeat 50% 35%
          &:active
            background #151a1b url("images/icons/favorite-filled.svg") no-repeat 50% 35%
        &#summary-talk-button
          background url("images/icons/talk-icon.svg") no-repeat 50% 35%
          &:hover
            background #323232 url("images/icons/talk-icon.svg") no-repeat 50% 35%
          &:active
            background #151a1b url("images/icons/talk-icon.svg") no-repeat 50% 35%
        

      #tools
        float right
        width 54px
        height 432px
        padding 5px
        background-color rgb(50,50,50)
        h3
          font-style italic
          font-size 0.9em
        .tool-button
          display inline-block
          padding 5px
          margin 5px 0px 5px 0px
          text-align center
          font-size 0.75em
          opacity 0.5
          border none
          color white
          background-color rgb(50,50,50)
          height 60px
          width 100%
          border-radius 0.3em
          transition 0.3s
          &:hover
            background-color #4C4C4C
            border-radius 0.3em
            opacity 1.0
          &.toggled
            background-color #151A1B
            transition 0.3s
          span
            top 20px
            position relative
            display inline-block
            margin-bottom 10px
          &:active
            transform translateY(1px)
            box-shadow none
          &:hover
            opacity 1.0
          &#zoom-button
            background url("images/icons/zoom-in.svg") no-repeat 50% 35%
            &.allowZoomOut
              background #151a1b url("images/icons/zoom-out.svg") no-repeat 50% 35%
            &.zoomed
              background-color #151a1b
          &#toggle-fav
            background url("images/icons/favorite-nofill.svg") no-repeat 50% 35%
            &.toggled
              background #151a1b url("images/icons/favorite-filled.svg") no-repeat 50% 35%
          &#help
            background url("images/icons/guide-icon.svg") no-repeat 50% 35%
          &#tutorial
            background url("images/icons/tut-icon.svg") no-repeat 50% 35%
            
      #slider-container
        display inline-block
        float left
        height 22px
        background rgba(13,21,24,0.75)
        #ui-slider
          width 1026px
          height 20px
          position relative
          float left
          display inline-block
          background none
          &.noUi-background
            border 1px solid #323232
          &.noUi-target
            border none
            box-shadow none
          .noUi-base
            width 790px
            margin-left 118px
          .noUi-handle
            border 1px solid #9a9ea2
            background rgba(137, 137, 137, .6)
            height 22px
            top 0px
            width 236px
            left -118px
            box-shadow none
            &:before
              text-align center
              color #9a9ea2
              background none
              content "III"
              line-height 20px
              height 20px
              left 0px
              top 0px
              position relative
              font-size 12px
              width 100%
              z-index 5
            &:after
              display none
            &:hover
              cursor -webkit-grab
              cursor grab
        #axis-label
          width 60px
          float left
          height 100%
          text-align center
          font-weight 700
          font-style italic
          font 12px
          background rgb(50,50,50)
        #numbers-container
          display inline
          position absolute
          background rgba(13,21,24,0.75)
          // width 954px
          width 1024px
          height 20px
          text-align justify
          display inline-table
          color #525c5b
          border 1px solid #323232
          span
            display table-cell
    #subject-metadata
      position relative
      display inline-block
      width 1090px
      height 40px
      margin-top 12px
      .meta
        font-size 12px
        line-height 24px
      #star-id
        font-weight 700
      .meta-field
        float left
      .meta-value
        float left
        margin-left 5px
        margin-right 35px
        color rgb(252,69,65)
        font-style bold
      #button-container
        position absolute
        top 20px
        right 0px
        display inline-block
        transform translateY(-50%)
        text-sp
        button
          &[name="no-transits"]
            opacity 0.5
            font-weight bold
            &:hover
              opacity .9
          &[name="finished-marking"]
            display none
          &[name="finished-feedback"]
            display none
          &[name="next-subject"]
            display none
.zooniverse-dialog
  z-index 1000
