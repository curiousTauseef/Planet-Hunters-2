.bg-overlay
  background-color rgba(19,34,44,0.75)

.secondary-header
  margin 0 auto
  max-width 1090px
  height 175px
  line-height 175px
  font-size 20px
  color #fff
  h1
    font-size 40px
    font-weight 300
.secondary-white
  background-color #fff
  padding-bottom 50px
  min-height 730px
  overflow auto
  .secondary-content
    margin 0 auto
    max-width 1090px
    nav
      margin-bottom 40px
      button
        color SECONDARY_BLUE
        height 60px
        padding 0 10px
        &.active
          color #fff
          background-color SECONDARY_BLUE
    h1
      font-weight 300
      margin-bottom 30px
    h2
      margin 0 0 10px 0
      font-style italic
      font-size 14px
      font-weight 700
      color #515151
    p
      line-height 1.5em
      font-size 16px
      margin-bottom 20px
    img
      width 100%
    a
      color SECONDARY_BLUE
      text-decoration underline
      font-style italic
    .left-column
      float left
      width 66%
      .content
        padding-right 35px
    .right-column
      float left
      width 33%
      .content
        padding-left 35px
      button
        width 100%
        margin 20px 0

@media screen and (max-width: 820px)
  .secondary-white
    .secondary-content
      .right-column, .left-column
        width 100%

@media screen and (max-width: 1090px)
  .secondary-white
    .secondary-content
      .right-column, .left-column
        .content
          padding 0 10px
  .secondary-header
    h1
      padding 0 10px