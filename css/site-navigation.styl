.site-navigation
  background-color #000
  color #fff
  font-weight 300
  overflow hidden
  height 50px

  .content-container
    width SITE_WIDTH
    padding 75px
    margin-top 20px
    margin-left 75px
    text-align right

  .temp_logo
    font-size: 0.7em
    text-align: center
    line-height: 50px
    float: left
    text-transform: uppercase
    color: white
    padding-left: 20px
    padding-right: 20px
    letter-spacing: 2px
    font-style: bold

  .logo
    float left
    width 200px
    height 65px
    transform-origin -5%
    text-transform: uppercase

  .link
    width 80px

  .links
    float left
    padding 0px 20px 0px 20px
    line-height 50px
    display block
    text-align center

    a
      font-size 12px
      display inline-block
      position relative
      @media screen and (min-width: 1300px)
        padding 0 10px
      &.active
        font-weight bold
        background rgb(252,69,65)
      &:after
        background transparent
        content ""
        height 4px
        left 0
        margin-top -4px
        position absolute
        top 67%
        width 100%
      &:hover:after
        height 4px
        background rgb(252,69,65)
        top 100%
      &.active:after
        background rgb(252,69,65)
        top 100%
        transition .2s

.zooniverse-top-bar
  background transparent
  font-weight 300
  svg
    g
      fill #757575
  .corner
    display none
  .current-user-name
    font-weight inherit
  .avatar img
    border-radius 50%

.footer-container
  padding 20px
  .zooniverse-footer
    float right
    .logo
      transform scale(0.4)
    .content
      display inline
