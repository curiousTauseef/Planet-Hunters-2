.zooniverse-top-bar
  background: transparent
  font-weight: 300
  margin-right: unit((100 - SITE_WIDTH) / 2, '%')
  color #757575
  svg
    g
      fill #757575

  .corner
    display: none

  .current-user-name
    font-weight: inherit

  .avatar img
    border-radius: 50%
