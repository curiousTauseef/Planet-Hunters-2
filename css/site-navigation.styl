.site-navigation
  background-color #000
  color #fff
  font-weight 300
  overflow hidden
  height 50px
  &.home
    background-color transparent
  .content-container
    width SITE_WIDTH
    padding 75px
    margin-top 20px
    margin-left 75px
    text-align right
  .logo
    width 200px
    height 50px
    float: left
    color: white
    padding-left: 20px
    padding-right: 20px
    
  #hamburger, #user-icon, #close
    display none

  .links
    float left
    padding 0 0 0 20px
    line-height 50px
    display block
    text-align center
    a
      font-size 12px
      display inline-block
      position relative
      opacity 0.5
      padding 0 20px
      @media screen and (min-width: 1300px)
        padding 0 30px
      &.active
        background rgb(252,69,65)
        opacity 1.0
        &:after
          background rgb(252,69,65)
          top 100%
          transition .2s
      &:after
        background transparent
        content ""
        height 4px
        left 0
        margin-top -4px
        position absolute
        top 67%
        width 100%
      &:hover
        opacity 1.0
        &:after
          height 4px
          background rgb(252,69,65)
          top 100%
