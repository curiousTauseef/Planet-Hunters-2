.zooniverse-top-bar
  background transparent
  font-weight 300
  svg
    g
      fill #757575
  .corner
    display none
  .current-user-name
    font-weight inherit
  .avatar img
    border-radius 50%

.footer-container
  // padding 20px
  width 1090px
  margin 0 auto
  .zooniverse-footer
    float none
    .zooniverse-logo-container
      width 100%
      transform scale(0.4)
      .zooniverse-logo
         width 100%
    .zooniverse-footer-content
      width 100%
      float none
      .zooniverse-footer-heading
        width 75%
