.home-page
  color inherit

  .content-container
    margin-top 10%

  .call-to-action
    float left
    font-family MAIN_FONT_FAMILY
    font-weight 300
    color #fff
  .are-you-ready
    font-size 42px
    margin-bottom 40px
  .description
    font-size 18px

  a
    @extends #_STANDARD_BUTTON
    font-family MAIN_FONT_FAMILY
    font-size 14px
    color #000
    &#begin-classifying
      background-color #e4c460
      border none
      @media screen and (max-width: 430px)
        display block
        text-align center
        height 40px
        line-height 40px
        margin 100px 0 0 0
        color #fff
        font-size 22px
    &#learn-more
      background-color none
      color #fff


