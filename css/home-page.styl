.home-page
  color #fff
  font-family MAIN_FONT_FAMILY
  -webkit-font-smoothing antialiased
  min-height 630px

  .content-block
    display table
    .content-container
      display table-row
      margin 0 auto
      min-width 1090px

  .call-to-action
    margin-bottom 50px
    font-size 65px
    font-weight 300
  .description
    font-size 18px
    font-weight 200

  a
    @extends #_STANDARD_BUTTON
    font-size 14px
    color #000
    height 40px
    line-height 40px
    &#begin-classifying
      margin-left 25px
      color #fff
      background-color #e4c460
      border-color #e4c460
      border-width 1px
      border-radius 4px 
      font-weight 700
      @media screen and (max-width: 430px)
        display block
        margin 100px 0 0 0
        height 30px
        font-size 22px
        text-align center
        line-height 30px
    &#learn-more
      background-color none
      color #fff
      font-weight 300
      font-size 14px
      

