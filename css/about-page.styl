.about-page
  color inherit

  .team-members
    align-items: flex-start
    display: flex
    flex-wrap: wrap

    .team-member
      box-sizing: border-box
      padding: 0 25px 40px 0
      width: 33%

      img
        border: 4px solid SECONDARY_BLUE
        border-radius: 50%
        margin: 10px
        width: calc(100% - 20px)

      .name
        color: black
        font-size: 16px
        font-weight: 700

      .location
        color: #888
        font-size: 12px
        font-style: italic
        margin: 1px 0 4px 0

  .organization
    clear: both
    padding: 0 0 20px 0

  .logo
    float: right
    max-width: 22%
    padding: 0 0 20px 25px
