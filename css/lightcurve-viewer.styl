.lightcurve-viewer
  color inherit
  transition all 2s ease
  width 100%
  .content-block
    overflow-x visible
  .bg-overlay
    background-color rgba(19,34,44,0.92)

  #subject-container
    display none
    position relative
    width 1026px
    // height 400px
    margin-top 0px
    margin-bottom 0px
    margin-left auto
    margin-right auto
    right 0%
    z-index 999
    transition right 1s

    .lightcurve-viewer
      float left
      position relative

      #loading-screen
        position absolute
        width 960px
        height 420px
        // background-color rgba(0,0,0,0.25)
        background-repeat no-repeat
        background-position center
        // background-image url('./images/loading.gif')
        h3
          margin-top 175px
          padding 20px
          color #fff
          text-align center
      #graph
        float left
        border 1px solid rgb(50,50,50)
        background rgba(13,21,24,0.92)
        z-index 3
        user-select none
      #marks-container
        // background-color rgb(50,61,107)
        background-color rgba(19,33,42,1.0)
        // height 420px
        width 962px
        overflow hidden
        float left
        position relative
        user-select none
      #zoom-notification
        position absolute
        font-size 72px
        font-weight bold
        padding 20px
        opacity 0.5
      
      #tools
        float right
        width 54px
        height 409px
        padding 5px
        background-color rgb(50,50,50)
        h3
          font-style italic
          font-size 0.9em
        .tool-button
          display inline-block
          padding 5px
          margin 5px 0px 5px 0px
          text-align center
          font-size 0.75em
          opacity 0.5
          border none
          color white
          background-color rgb(50,50,50)
          height 60px
          width 100%
          border-radius 0.3em
          transition 0.3s
          &:disabled
            opacity 0.15
          &:hover
            background-color #4C4C4C
            border-radius 0.3em
            opacity 1.0
          &.toggled
            background-color #151A1B
            transition 0.3s
          span
            top 20px
            position relative
            display inline-block
            margin-bottom 10px
          &:active
            transform translateY(1px)
            box-shadow none
          &:hover
            opacity 1.0
          &#zoom-button
            background url("images/icons/zoom-in.svg") no-repeat 50% 35%
            &.allowZoomOut
              background #151a1b url("images/icons/zoom-out.svg") no-repeat 50% 35%
            &.zoomed
              background-color #151a1b
          &#toggle-fav
            background url("images/icons/favorite-nofill.svg") no-repeat 50% 35%
            &.toggled
              background #151a1b url("images/icons/favorite-filled.svg") no-repeat 50% 35%
          &#help
            background url("images/icons/guide-icon.svg") no-repeat 50% 35%
          &#tutorial
            background url("images/icons/tut-icon.svg") no-repeat 50% 35%
            
      #slider-container
        display inline-block
        float left
        height 22px
        background rgba(13,21,24,1.5)
        #ui-slider
          width 962px
          height 20px
          position relative
          float left
          display inline-block
          background none
          &.noUi-background
            border 1px solid #323232
          &.noUi-target
            border none
            box-shadow none
          .noUi-base
            width 726px
            margin-left 118px
          .noUi-handle
            border 1px solid #9a9ea2
            background rgba(137, 137, 137, .6)
            height 22px
            top 0px
            width 236px
            left -118px
            box-shadow none
            &:before
              text-align center
              color #9a9ea2
              background none
              content "III"
              line-height 20px
              height 20px
              left 0px
              top 0px
              position relative
              font-size 12px
              width 100%
              z-index 5
            &:after
              display none
            &:hover
              cursor -webkit-grab
              cursor grab
        #axis-label
          width 60px
          float left
          height 100%
          text-align center
          font-weight 700
          font-style italic
          font 12px
          background rgb(50,50,50)
    #subject-metadata
      // display none
      // position relative
      // display inline-block
      // width 1090px
      height 40px
      margin-top 12px
      .meta
        font-size 12px
        line-height 24px
      .header
        font-weight 700
      .meta-field
        float left
      .meta-value
        float left
        margin-left 5px
        margin-right 35px
        color rgb(252,69,65)
        font-style bold
      #button-container
        position absolute
        top 20px
        right 0px
        display inline-block
        transform translateY(-50%)
        text-sp
        button
          &[name="no-transits"]
            opacity 0.5
            font-weight bold
            &:hover
              opacity .9
          &[name="finished-marking"]
            display none
          &[name="finished-feedback"]
            display none
          &[name="next-subject"]
            display none

  .course-interval-setter
    display inline-flex
    float left
    height 25px
    line-height 25px
    padding-right 10px
    font-weight 100
    // transition 0.4s
  .course-interval-text
    display inline
    line-height 25px
  .course-interval
    // float left
    color #fff
    border solid thin
    border-radius 4px
    background none
    width 30px
    font-size 10px
    text-align center
    margin 5px
  .mini-course-option
    float left
    width 20px
    height 20px

  .spinner
      // display: none
      margin: 6em auto
      font-size: 10px
      position: absolute
      top 50%
      left 50%
      margin -61px auto auto -61px
      text-indent: -9999em
      border-top: 1.1em solid rgba(255, 255, 255, 0.2)
      border-right: 1.1em solid rgba(255, 255, 255, 0.2)
      border-bottom: 1.1em solid rgba(255, 255, 255, 0.2)
      border-left: 1.1em solid #ffffff
      -webkit-animation: load8 1.1s infinite linear
      animation: load8 1.1s infinite linear
    .spinner,
    .spinner:after
      border-radius: 50%
      width: 10em
      height: 10em

    @-webkit-keyframes load8
      0%
        -webkit-transform: rotate(0deg)
        transform: rotate(0deg)
      100%
        -webkit-transform: rotate(360deg)
        transform: rotate(360deg)
    @keyframes load8
      0%
        -webkit-transform: rotate(0deg)
        transform: rotate(0deg)
      100%
        -webkit-transform: rotate(360deg)
        transform: rotate(360deg)

.zooniverse-dialog
  z-index 1000
