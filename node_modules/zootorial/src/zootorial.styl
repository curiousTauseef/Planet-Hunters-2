BACKGROUND = white
FOREGROUND = black
ALT = lighten(#390, 75%)
RED = #600

@keyframes zootorial-throb
  0%
    background: ALT

  100%
    background: darken(ALT, 25%)

@keyframes zootorial-glow
  0%
    box-shadow: 0 0 1px 2px black inset

  100%
    box-shadow: 0 0 1px 2px white inset

.zootorial-tutorial
  background: BACKGROUND
  border: 0
  border-radius: 3px
  box-shadow: 0 3px 5px rgba(FOREGROUND, 0.67)
  color: FOREGROUND
  font: 14px "Helvetica Neue", Arial, sans-serif
  max-width: 33%
  transition: opacity 0.5s, transform 0.5s;
  z-index: 1

  button.zootorial-close
    background: transparent
    border: 0
    color: rgba(FOREGROUND, 0.25)
    cursor: pointer
    font: 16px Arial, sans-serif
    height: 1em
    line-height: 1em
    padding: 0
    position: absolute
    right: 5px
    top: 5px
    width: 1em

    &:hover
      color: rgba(RED, 0.5)

  .zootorial-header
    color: rgba(FOREGROUND, 0.5)
    font-size: 20px
    margin-bottom: -10px
    padding: 15px 25px 0 20px

  .zootorial-content
    padding: 15px 25px 15px 20px

  .zootorial-instruction
    background: ALT
    border-radius: 3px
    font-weight: bold
    padding: 15px 25px 15px 20px

    &[data-zootorial-attention]
      animation: 0.25s zootorial-throb ease-in-out infinite alternate

    &[data-zootorial-attention="1"]
      animation: 0.5s zootorial-throb ease-in-out infinite alternate

    button
      background: transparent
      border: 0
      color: inherit
      cursor: pointer
      font-family: inherit
      font-size: 12px
      margin: 0
      padding: 0
      text-shadow: inherit
      text-decoration: underline

      &[disabled]
        opacity: 0.5
        pointer-events: none

  .zootorial-footer
    background: ALT
    border-radius: 3px
    padding: 10px
    text-align: center

    button
      background: BACKGROUND
      border: 0
      border-radius: 3px
      box-shadow: 0 2px 3px rgba(FOREGROUND, 0.67)
      color: inherit
      cursor: pointer
      font: inherit
      font-weight: bold
      padding: 3px 15px
      position: relative

      &:active
        box-shadow: 0 1px 2px rgba(FOREGROUND, 0.5)
        top: 1px

  .zootorial-progress
    text-align: center

  .zootorial-progress-step
    border: 1px solid gray
    border-radius: 50%
    display: inline-block
    height: 5px
    margin: 0 3px
    width: 5px

    &[data-zootorial-progress]
      background: gray

  .zootorial-arrow
    border: 10px solid transparent
    left: 50%
    top: 50%
    margin: -10px 0 0 -10px
    height: 0
    width: 0

    &[data-zootorial-position="top"]
      border-bottom-color: BACKGROUND
      border-top-width: 0;
      top: 0

    &[data-zootorial-position="right"]
      border-left-color: BACKGROUND
      border-right-width: 0;
      margin-left: 0
      left: 100%

    &[data-zootorial-position="bottom"]
      border-bottom-width: 0;
      border-top-color: BACKGROUND
      margin-top: 0
      top: 100%

    &[data-zootorial-position="left"]
      border-left-width: 0;
      border-right-color: BACKGROUND
      left: 0

[data-zootorial-actionable]
  animation: 0.5s zootorial-glow ease-in-out infinite alternate
