.zooniverse-footer
  overflow: hidden
  text-align: left

  a
    color: inherit
    opacity: 0.75
    text-decoration: none

    &:hover
      opacity: 1

  .zooniverse-logo-container
    float: left
    opacity: 0.5
    width: 25%

    &:hover
      opacity: 0.67

    .zooniverse-logo
      height: 100%
      max-height: 200px
      width: 85%

  .zooniverse-footer-content
    float: left
    width: 75%

  .zooniverse-footer-heading
    font-size: 18px
    margin-bottom: 1em

  .zooniverse-footer-projects
    font-size: 14px
    overflow: hidden

  .zooniverse-footer-general
    box-shadow: 0 1px 1px -1px gray inset
    font-size: 12px
    letter-spacing: 1px
    margin-top: 1em
    overflow: hidden
    padding-top: 1em
    text-transform: uppercase

  .zooniverse-footer-category
    float: left
    width: 25%

  .zooniverse-footer-category-title
    font-size: 10px
    font-weight: bold
    letter-spacing: 2px
    text-transform: uppercase
